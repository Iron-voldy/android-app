<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_profile_placeholder"
        android:contentDescription="@string/profile_picture"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:clickable="true"
        android:focusable="true" />

    <!-- Change Picture Text -->
    <TextView
        android:id="@+id/changePictureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_picture"
        android:textSize="14sp"
        android:textColor="@color/primaryColor"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/profilePicture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- First Name Field -->
    <EditText
        android:id="@+id/firstNameField"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="@string/first_name_hint"
        android:inputType="textPersonName"
        android:autofillHints="given-name"
        android:importantForAutofill="yes"
        android:textColorHint="@color/textColorHint"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/changePictureText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Last Name Field -->
    <EditText
        android:id="@+id/lastNameField"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="@string/last_name_hint"
        android:inputType="textPersonName"
        android:autofillHints="family-name"
        android:importantForAutofill="yes"
        android:textColorHint="@color/textColorHint"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/firstNameField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Email Field -->
    <EditText
        android:id="@+id/emailField"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        android:importantForAutofill="yes"
        android:textColorHint="@color/textColorHint"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/lastNameField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Address Field -->
    <EditText
        android:id="@+id/addressField"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="@string/address_hint"
        android:inputType="textPostalAddress"
        android:autofillHints="postalAddress"
        android:importantForAutofill="yes"
        android:textColorHint="@color/textColorHint"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/emailField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Set Location Button -->
    <Button
        android:id="@+id/setLocationButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/set_location"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/buttonBackground"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintTop_toBottomOf="@id/addressField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/save"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/buttonTextColor"
        app:layout_constraintTop_toBottomOf="@id/setLocationButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>
