<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/cartProductImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/product_image_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/cartProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sample_product"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/cartProductImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Product Price -->
    <TextView
        android:id="@+id/cartProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_price"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/cartProductImage"
        app:layout_constraintTop_toBottomOf="@id/cartProductName"
        android:layout_marginStart="8dp" />

    <!-- Quantity Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/cartProductPrice"
        app:layout_constraintTop_toBottomOf="@id/cartProductName"
        android:layout_marginStart="8dp">

        <Button
            android:id="@+id/decreaseQuantity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="-"
            android:textSize="18sp"
            android:contentDescription="@string/decrease_quantity"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/cartProductQuantity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="1"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@color/light_gray" />

        <Button
            android:id="@+id/increaseQuantity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="+"
            android:textSize="18sp"
            android:contentDescription="@string/increase_quantity"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
