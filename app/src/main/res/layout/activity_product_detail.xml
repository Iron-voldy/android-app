<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <!-- Wishlist Heart -->
    <ImageView
        android:id="@+id/wishlistHeart"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_heart"
        android:contentDescription="@string/wishlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp" />

    <!-- Product Image Carousel -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/productDetailImage"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tabs for Details and Reviews -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/productTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/primaryColor"
        app:tabSelectedTextColor="@color/primaryColor"
        app:tabTextColor="@color/dark_grey"
        app:layout_constraintTop_toBottomOf="@id/productDetailImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Details and Reviews tabs"
        android:importantForAccessibility="yes">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_tab"
            android:contentDescription="Tab for product details" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reviews_tab"
            android:contentDescription="Tab for product reviews" />
    </com.google.android.material.tabs.TabLayout>

    <!-- ViewPager2 for Details and Reviews -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/productDetailsViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/productTabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:id="@+id/bottomActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Product Price -->
        <TextView
            android:id="@+id/bottomProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$89.99"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="16dp" />

        <!-- Add to Cart Button -->
        <Button
            android:id="@+id/addToCartButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/add_to_cart"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
