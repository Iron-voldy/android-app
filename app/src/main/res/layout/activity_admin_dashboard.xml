<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- Admin Welcome Title -->
    <TextView
        android:id="@+id/adminWelcomeText"
        android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/welcome_admin"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="20dp"/>

    <!-- Manage Users Button -->
    <Button
        android:id="@+id/manageUsersButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/manage_users"
    android:drawableStart="@drawable/ic_users"
    android:textStyle="bold"
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/adminWelcomeText"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <!-- Manage Sellers Button -->
    <Button
        android:id="@+id/manageSellersButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/manage_sellers"
    android:drawableStart="@drawable/ic_sellers"
    android:textStyle="bold"
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/manageUsersButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <!-- Manage Products Button -->
    <Button
        android:id="@+id/manageProductsButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/manage_products"
    android:drawableStart="@drawable/ic_products"
    android:textStyle="bold"
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/manageSellersButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <!-- View Orders Button -->
    <Button
        android:id="@+id/viewOrdersButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/view_orders"
    android:drawableStart="@drawable/ic_orders"
    android:textStyle="bold"
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/manageProductsButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <!-- Logout Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:backgroundTint="@color/logout_button_color"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/viewOrdersButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>