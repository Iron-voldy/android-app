<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- Seller Welcome Title -->
    <TextView
        android:id="@+id/sellerWelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_seller"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Product Management -->
    <Button
        android:id="@+id/manageProductsButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/manage_products"
    android:drawableLeft="@drawable/ic_products"
    android:textStyle="bold"
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/sellerWelcomeText"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <!-- Order Management -->
    <Button
        android:id="@+id/manageOrdersButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/manage_orders"
    android:drawableLeft="@drawable/ic_orders"
    android:textStyle="bold"
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/manageProductsButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <!-- Messages -->
    <Button
        android:id="@+id/checkMessagesButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/check_messages"
    android:drawableLeft="@drawable/ic_messages"
    android:textStyle="bold"
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/manageOrdersButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <!-- Logout -->
    <Button
        android:id="@+id/logoutButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/logout"
    android:backgroundTint="@color/logout_button_color"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/checkMessagesButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
